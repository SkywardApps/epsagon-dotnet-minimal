{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack",
            "command": "dotnet pack -c Release",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent",
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy",
            "command": "dotnet lambda deploy-serverless",
            "type": "shell",
            "group": "build",
            "options": { "cwd": "lambda-test/src/serverless-test" },
            "presentation": {
                "reveal": "silent",
                "panel": "new",
                "clear": true
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
